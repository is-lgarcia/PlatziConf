<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="2dp"
    android:padding="8dp"
    android:background="@drawable/shape_parrafo">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtItemScheduleHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:text="00:00"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/itemScheduleTitulo"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtItemScheduleAMPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|top"
            android:text="AM"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/itemScheduleSubTitulo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginHomeSubtitle"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtItemScheduleConferenceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="Nombre de la conferencia"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/tamanoTitulo" />

        <TextView
            android:id="@+id/txtItemScheduleConferenceSpeaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginBottom="3dp"
            android:text="Speaker Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/tamanoSubTitulo" />

        <TextView
            android:id="@+id/txtItemScheduleTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_topico"
            android:ellipsize="end"
            android:lines="1"
            android:text="Tag"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tamanoSubTitulo" />

    </LinearLayout>


</LinearLayout>