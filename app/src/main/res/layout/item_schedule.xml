<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtItemScheduleHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:gravity="right|bottom"
            android:textSize="@dimen/itemScheduleTitulo"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtItemScheduleAMPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AM"
            android:gravity="right|top"
            android:textSize="@dimen/itemScheduleSubTitulo"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/marginHomeSubtitle">

        <TextView
            android:id="@+id/txtItemScheduleConferenceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la conferencia"
            android:textSize="@dimen/tamanoTitulo"
            android:textColor="@color/colorPrimaryDark"
            android:ellipsize="end"
            android:lines="1"/>

        <TextView
            android:id="@+id/txtItemScheduleConferenceSpeaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speaker Name"
            android:textSize="@dimen/tamanoSubTitulo"
            android:textColor="@color/colorPrimaryDark"
            android:ellipsize="end"
            android:lines="1"/>

        <TextView
            android:id="@+id/txtItemScheduleTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tag"
            android:textSize="@dimen/tamanoSubTitulo"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:lines="1"/>

    </LinearLayout>


</LinearLayout>